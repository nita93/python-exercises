    "name = input(\"Who's birthday do you want to look up?: \")\n",
    "date = birthday_dict.get(name, False)\n",
    "\n",
    "if date:\n",
    "    print(f\"{name}'s birthday is {date}.\")\n",
    "else:\n",
    "    print(f\"There is no person with the following name: {name}\")"
